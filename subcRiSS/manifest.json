{
  "manifest_version": 2,
  "name": "subcRiSS",
  "version": "1.0.0",
  "description": "Generate RSS feed links from YouTube channels (for yt2rss).",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["toast.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "subcRiSS"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "2.71828183e0+subcRiSS@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}
